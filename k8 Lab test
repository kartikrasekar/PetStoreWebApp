apiVersion: apps/v1
kind: Deployment
metadata:
  name: echo-exkube
  namespace: exkube
  labels:
    app: echo-studentX
spec:
  replicas: 1
  selector:
    matchLabels:
      app: echo-studentX
  template:
    metadata:
      labels:
        app: echo-studentX
    spec:
      containers:
      - name: echo-exkube-cont
        image: registry.k8s.io/echoserver:1.9
        ports:
        - containerPort: 8080

